<h1>Add New Teacher</h1>

<% if @teacher %>
  <% @teacher.errors.full_messages.each do |error_msg| %>
    <p><%= error_msg %></p>
  <% end %>
<% end %>
  
<form method="post" action="/teachers">
  <label>First Name</label>
  <input type="text" name="fname">
  
  <label>Last Name</label>
  <input type="text" name="lname">
  
  <input type="submit">
</form>