<% if @teacher %>
  <% @teacher.errors.full_messages.each do |msg| %>
    <p class="error"><%= msg %></p>
  <% end %>
<% end %>
  
<h1>Add New Teacher</h1>
<form method="post" action="<%= create_teacher_path() %>">
  <p>
		First Name:<br />
		<input type="text" name="fname" /><br />
		Last Name:<br />
		<input type="text" name="lname" /><br />
	</p>
	<input type="submit" />
</form>
