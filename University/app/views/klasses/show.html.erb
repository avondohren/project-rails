<h1>Class Information</h1>

<p>
	Term: <%= Term.find(@klass.term_id).name %><br />
	Class Name: <%= @klass.name %><br />
	Teacher: <%= Teacher.find(@klass.teacher_id).lname %><br />
	Students:</p>
<table>
  <thead>
    <th>First Name</th>
    <th>Last Name</th>
  </thead>
  <tbody>
  	<% @klass.students.each do |student| %>
  		<tr>
  			<td><%= Student.find(student.id).fname %></td>
  			<td><%= Student.find(student.id).lname %></td>
  		</tr>
  	<% end %>
  </tbody>
</table>

