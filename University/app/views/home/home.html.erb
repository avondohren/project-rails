<h1>Welcome to the Cool Table University Database</h1>

<h2>Terms</h2>
<p><%= link_to("List all terms", :terms)%></p>
<p><%= link_to("Add a term", :new_term)%></p>
<p>View a term</p>
<ul>
	<% @terms.each do |term| %>
		<li><%= link_to(term.name, term_path(term.id)) %></li>
	<% end %>
</ul>

<hr />

<h2>Classes</h2>
<p><%= link_to("List all classes", :klasses) %></p>
<p><%= link_to("Add a class", :new_klass)%></p>
<p>View a class</p>
<ul>
	<% @klasses.each do |klass| %>
		<li><%= link_to(klass.name, klass_path(klass.id)) %></li>
	<% end %>
</ul>

<hr />

<h2>Teachers</h2>
<p><a href="/add/teacher">Add a teacher</a></p>
<p>View a teacher</p>
<ul>
	<% @teachers.each do |teacher| %>
		<li><a href="teacher/<%= teacher.id %>"><%= teacher.name %></li>
	<% end %>
</ul>
<p><a href="/list/teachers">List all teachers</a></p>

<hr />

<h2>Students</h2>
<p><%= link_to("List all students", :students)%></p>
<p><%= link_to("Add a student", :new_student)%>
<p><%= link_to("Enroll a student", :new_enrollment) %></p>
<p>View a student</p>
<ul>
	<% @students.each do |student| %>
		<li><%= link_to(student.name, student_path(student.id))%></li>
	<% end %>
</ul>